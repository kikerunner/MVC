</p>

<form method="get">
    @Html.DropDownList("color", "Selecciona un color")
    <input type="submit" value="Buscar!"/>
</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom_marca)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nom_serie)
        </th>
